<section class="section">
  <div class="container">
    <p class="title">View Offers</p>
    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Date</th>
          <th>Seller Name</th>
          <th>Notes</th>
          <th>Amount</th>
          <th>Deliver in</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if @offers.blank? %>
          <tr>
            <td colspan="7" class="has-text-centered">Nothing to show here</td>
          </tr>
        <% end %>

        <% @offers.each do |offer| %>
          <tr>
            <td><%= offer.created_at.strftime("%d, %b %Y") %></td>
            <td>
              <figure class="image is-48x48">
                <%= image_tag avatar_url(offer.user), class: 'is-rounded'%>
              </figure>
            </td>
            <td><%= offer.note %></td>
            <td>$<%= offer.amount %></td>
            <td><%= offer.days %></td>
            <td><%= offer.status.capitalize %></td>
            <td>
              <%= link_to "Accept", nil, class: "button is-small is-success" %>
              <%= link_to "Reject", nil, class: "button is-small is-danger" %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</section>