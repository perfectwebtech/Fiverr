<section class="section">
  <div class="container">
    <div class="columns">

      <!-- LEFT SIDE -->
      <div class="column is-two-thirds">
        <div class="columns is-multiline">

          <!-- Title -->
          <div class="column is-full">
            <p class="title is-4"><%= @request.title %></p>
            <article class="media">
              <div class="media-content">
                <p>
                  <b><%= @request.category.name %></b>
                  <span class="is-pulled-right">
                    Posted on: <%= @request.created_at.strftime('%d, %b %Y') %>
                  </span>
                </p>
                Need to be delivered in: <%= @request.delivery %> days | Offers: <%= @request.offers.size %> | Buget: $<%= @request.budget %>
              </div>
            </article>
          </div>

          <!-- Description -->
          <div class="column is-full">
            <div class="card">
              <div class="card-content">
                <strong>Description</strong>
                <hr>
                <%= @request.description %>
                <% if @request.attachment_file.attached? %>
                  <p>
                    <%= link_to url_for(@request.attachment_file),
                                class: 'tag small is-warning m-t-20',
                                download: "Attachment_#{@request.attachment_file.id}" do %>
                      <i class="fa fa-paperclip fa-lg p-r-5">
                        <%= @request.attachment_file.filename %>
                      </i>
                    <% end %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>

          <!-- About Buyer -->
          <div class="column">
            <div class="card">
              <div class="card-content">
                <strong>About the Buyer</strong>
                <hr/>

                <div class="content">
                  <div class="columns">

                    <!-- Buyer Avatar -->
                    <div class="column">
                      <div class="card-content is-horizontal-center is-flex">
                        <figure class="image is-96x96">
                          <%= image_tag avatar_url(@request.user), class: 'is-rounded' %>
                        </figure>
                      </div>

                      <div class="content has-text-centered">
                        <p class="title is-5">
                          <%= @request.user.full_name %>
                        </p>
                        <button class="button is-black is-outlined is-fullwidth">
                          Contact me
                        </button>
                      </div>
                    </div>

                    <!-- Buyer Profile -->
                    <div class="column f-15">
                      <article class="media">
                        <div class="media-content">
                          <i class="fa fa-user m-r-5"> Member since </i>
                        </div>
                        <div class="media-right">
                          <%= @request.user.created_at.strftime('%b %Y') %>
                        </div>
                      </article>

                      <article class="media">
                        <div class="media-content">
                          <i class="fa fa-map-marker-alt m-r-5"> From </i>
                        </div>
                        <div class="media-right">
                          <%= @request.user.from %>
                        </div>
                      </article>


                      <article class="media">
                        <div class="media-content">
                          <%= @request.user.about %>
                        </div>
                      </article>

                    </div>

                  </div>
                </div>


              </div>
            </div>
          </div>

        </div>
      </div>

      <!-- RIGHT SIDE -->
      <div class="column">

        <div class="card">
          <%= form_for Offer.new do |f| %>
            <div class="card-content">
              <%= f.hidden_field :request_id, value: @request.id %>

              <div class="field">
                <label class="label">Amount ($)</label>
                <%= f.text_field :amount, class: "input" %>
              </div>

              <div class="field">
                <label class="label">Delivery in (days)</label>
                <%= f.text_field :days, class: "input" %>
              </div>

              <div class="field">
                <label class="label">Offer note</label>
                <%= f.text_area :note, class: "textarea" %>
              </div>

              <%= f.submit 'Send Offer', class: "button is-primary is-fullwidth" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</section>