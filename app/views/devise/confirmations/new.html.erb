<section class="hero is-primary is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6-table is-6-desktop is-6-widescreen">
          <div class="box">

            <div class="field has-text-centered">
              <strong>Resend confirmation instructions</strong>
            </div>


            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :email, class: "label" %>
                <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label :password, class: "label" %>
                <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me, class: "input" %>
                  <%= f.label :remember_me, class: "label" %>
                </div>
              <% end %>

              <div class="field">
                <%= f.submit "Log in", class: "button is-danger is-fullwidth" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
